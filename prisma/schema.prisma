generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model School {
  id       Int    @id @default(autoincrement())
  name     String
  address  String
  city     String
  state    String
  contact  String
  image    String
  email_id String

  @@map("schools")
}